{
  "ConnectionStrings": {
    //"AppDbContext": "Host=vm-igmo-dev.dobroga.local;Database=WmsDb;Username=WmsUser;Password=Pwd4Wms;Persist Security Info=True"
    "AppDbContext": "Host=vm-igmo-dev.dobroga.local;Database=WmsDb;Username=postgres;Password=pwd4postgres;Persist Security Info=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "encoding": "System.Text.Encoding::UTF8",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://vm-igmo-dev.dobroga.local:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "EnvironmentName",
      "EnvironmentUserName",
      "WithEnvironmentVariable",
      "WithProcessName",
      "WithProcessId",
      "WithThreadName",
      "WithThreadId"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Application": "WMS.Backend",
      "Environment": "Development"
    }
  },
  "Kafka": {
    "BootstrapServers": "192.168.0.109:29092, 192.168.0.109:39092, 192.168.0.109:49092",
    "Topics": {
      "OrderInCreateCommand": "orderin-create-command",
      "OrderInCreatedEvent": "orderin-created-event"
    }
  }
}
