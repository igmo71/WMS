<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WMS.Client.Core.ViewModels.Documents"
			 xmlns:bh="clr-namespace:WMS.Client.Core.Behaviours"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WMS.Client.Core.Views.Documents.OrderInView"
			 x:DataType="vm:OrderInViewModel">
	<Grid RowDefinitions="Auto, *">
		<StackPanel Orientation="Horizontal">
			<Label VerticalAlignment="Center"
				   Content="Number"/>
			<TextBox Text="{Binding Adapter.Number}"/>
			<Label VerticalAlignment="Center"
				   Content="Date"/>
			<TextBox Text="{Binding Adapter.DateTime}"/>
		</StackPanel>
		<DataGrid Grid.Row="1"
				  ItemsSource="{Binding Adapter.Products}"
				  Margin="0,5,0,0"
				  BorderThickness="1"
				  BorderBrush="Gray"
				  GridLinesVisibility="All">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Product" 
									Binding="{Binding Product.Name}"
									Width="2*"/>
				<DataGridTextColumn Header="Count"
									Binding="{Binding Count}"
									Width="*"
									IsReadOnly="False"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
