<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WMS.Client.Core.ViewModels.Catalogs"
             xmlns:bh="clr-namespace:WMS.Client.Core.Infrastructure.Behaviours"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WMS.Client.Core.Views.Catalogs.CatalogListView"
			 x:DataType="vm:CatalogListViewModel">
	<Grid RowDefinitions="*">
		<DataGrid Grid.Row="0"
				  ItemsSource="{Binding Catalog}"
				  BorderThickness="1"
				  BorderBrush="Gray"
				  GridLinesVisibility="All"
				  IsReadOnly="True"
				  bh:DoubleTappedBehaviour.Command="{Binding DataContext.OpenCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
				  bh:DoubleTappedBehaviour.CommandParameter="{Binding $self.SelectedItem}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Name"
									Binding="{Binding Name}"
									Width="*"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>